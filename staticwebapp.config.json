{
    "routes": [
        {
            "route": "/api/*",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "OPTIONS"
            ],
            "allowedRoles": [
                "anonymous"
            ]
        },
        {
            "route": "/api/ClassifyPenguin",
            "methods": [
                "POST",
                "OPTIONS"
            ],
            "allowedRoles": [
                "anonymous"
            ]
        },
        {
            "route": "/api/ClassifyPenguinSimple",
            "methods": [
                "POST",
                "OPTIONS"
            ],
            "allowedRoles": [
                "anonymous"
            ]
        },
        {
            "route": "/api/debug",
            "methods": [
                "GET",
                "POST",
                "OPTIONS"
            ],
            "allowedRoles": [
                "anonymous"
            ]
        },
        {
            "route": "/classify",
            "methods": [
                "POST",
                "OPTIONS"
            ],
            "allowedRoles": [
                "anonymous"
            ],
            "rewrite": "/api/ClassifyPenguin"
        },
        {
            "route": "/static/*",
            "headers": {
                "cache-control": "must-revalidate, max-age=86400"
            }
        },
        {
            "route": "/*",
            "rewrite": "/index.html",
            "statusCode": 200
        }
    ],
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "/images/*.{png,jpg,gif}",
            "/static/*",
            "/api/*"
        ]
    },
    "responseOverrides": {
        "404": {
            "rewrite": "/index.html",
            "statusCode": 200
        }
    },
    "platform": {
        "apiRuntime": "python:3.9"
    },
    "globalHeaders": {
        "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; font-src 'self' https://cdn.jsdelivr.net; img-src 'self' data: https://upload.wikimedia.org;",
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type,Authorization,X-Requested-With"
    }
}