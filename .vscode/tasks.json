{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "func",
      "label": "func: host start",
      "command": "host start",
      "problemMatcher": "$func-python-watch",
      "isBackground": true,
      "dependsOn": "pip install (functions)",
      "options": {
        "cwd": "${workspaceFolder}/function_app"
      }
    },
    {
      "label": "pip install (functions)",
      "type": "shell",
      "command": "${workspaceFolder}/web_app_env/bin/python -m pip install -r requirements.txt",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/function_app"
      }
    }
  ]
}